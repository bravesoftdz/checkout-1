procedure TFormPrincipal.FormActivate(Sender: TObject);
var cont : integer;
begin
  if not DM.SQLConfigGeral.Active then
    DM.SQLConfigGeral.Open;
  ImpPedidoVenda.ReportName := DM.PathAplicacao + '\PreVenda\Ticket PreVenda.rpt';
  try
    ImpPedidoVenda.Execute;
    Cont := 0;
    Progress.Min := 0;
    Progress.Max := 3000;
    Progress.Position := 0;
    While cont < 3000 do
      begin
        Progress.Position := Progress.Position+1;
        Inc(Cont);
      end;
  except
    ShowMessage('Problemas ao gerar o relatório !');
    Application.Terminate;
  end;
  DM.SQLConfigGeral.Close;
  Application.Terminate;
end;

